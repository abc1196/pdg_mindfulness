<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".treatment.TreatmentActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backToHomeButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_back_white"
            android:src="@drawable/ic_arrow_back_white"
            />

        <TextView
            android:id="@+id/dayNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:background="@color/colorPrimary"
            android:padding="30dp"
            android:text="Día "
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="40dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="2">

            <TableRow>

                <ImageView
                    android:id="@+id/imageBodyScanSession"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_bodyscan" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/bodyScan_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="215dp"
                    android:layout_height="95dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/colorPrimary"
                    android:text="Escaneo Corporal"
                    android:textAllCaps="false"
                    android:textAppearance="?android:textAppearanceButton"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteY="421dp" />
            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/imageRoutineSession"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_brush" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/daily_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="215dp"
                    android:layout_height="95dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/colorPrimary"
                    android:text="Actividad Cotidiana"
                    android:textAllCaps="false"
                    android:textAppearance="?android:textAppearanceButton"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow>

                <ImageView
                    android:id="@+id/imagePauseSession"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_pauseday" />

                <android.support.design.button.MaterialButton
                    android:id="@+id/pauseDay_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="215dp"
                    android:layout_height="95dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="14dp"
                    android:background="@color/colorPrimary"
                    android:text="Pausa en el día"
                    android:textAllCaps="false"
                    android:textAppearance="?android:textAppearanceButton"
                    android:textSize="20dp"
                    tools:layout_editor_absoluteY="421dp" />
            </TableRow>

        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <at.markushi.ui.CircleButton
                android:id="@+id/completeDayButton"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_completed"
                app:cb_color="@color/colorWhite" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>